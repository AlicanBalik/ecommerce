@using ShoppingWeb.Models
@*@model IEnumerable<ShoppingWeb.Models.Category>*@
@{
    List<Category> listCategory = ViewData["listCategories"] as List<Category>;
    List<Product> listProduct = ViewData["listProducts"] as List<Product>;
}
<div class="main">
    <div class="content">
        <div class="content_top"></div>
        <div class="content_bottom">
            <div class="wrap">
                <div class="content-bottom-left">
                    <div class="categories">
                        <ul>
                            <h3>Browse All Categories</h3>
                            @foreach (var item in listCategory)
                            {
                                <li><a href="/Product/@item.Name">@item.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="buters-guide col-md-3">
                        <h3>Feedback</h3>
                        <p><span>Want to leave us a feedback?</span></p>
                        <a href="Home/Contact">Contact Us</a> if you have feedback or suggestion.
                        @*<form action="/Home/SendFeedback" method="POST" id="feedbackForm">
                            <textarea required style="resize:none" class="feedback" rows="7" cols="37" id="Message" name="Message" placeholder="Comment your thoughts about our website."></textarea>
                            <input type="submit" class="btn feedback-submit" name="feedback-submit" id="feedback-submit" value="Send" />
                        </form>*@
                    </div>
                </div>

                <div class="content-bottom-right">
                    <h3>Browse All Categories</h3>
                    <div class="section group">
                        @foreach (var item in listProduct)
                        {
                            <div class="grid_1_of_4 images_1_of_4">
                                <h4>@item.Name</h4>
                                <a href="/Product/@item.Id+@item.Name"><img src="data:image/jpg;base64,@System.Convert.ToBase64String(item.Image)" alt="@item.Name" /></a>
                                <div class="price-details">
                                    <div class="price-number">
                                        <p><span class="rupees">$@item.Price</span></p>
                                    </div>
                                    <div class="add-cart">
                                        <h4>@Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = @item.Id }, "")</h4>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>
